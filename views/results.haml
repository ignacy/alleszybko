.span-24
  = haml :form, :layout => false

.span-24.prepend-top.append-bottom
  #banner= "Wyniki dla frazy: #{@query}"

.span-24.prepend-top
  - if !@search_results.nil?
    - @search_results.each do |sr|
      .span-20.prepend-2.result
        .span-13
          %a{ :href => allegro_link(sr['s-it-name'], sr['s-it-id']) }= sr["s-it-name"]
        .span-3
          = Time.at(sr["s-it-ending-time"].to_i).strftime("%m-%d-%Y")
        .prepend-1.span-3.last
          = cena(sr)
  - else
    %p= "Brak wyników. Spróbuj ponownie!"